<% if(todos.length >0) { %>
<ul class="list-unstyled" id="todo">
  <% for (let todo of todos){ %>
  <li>
    <div
      class="alert <%= todo.completed ? 'alert-success' : 'alert-secondary' %>"
    >
      <% if(todo.completed) {%>
      <del> <%= todo.text %> </del>
      <a
        href="/admin/delete-todo/<%= todo.id %>"
        class="close fa fa-trash"
        style="color: red"
      ></a>
      <a
        href="/admin/completed-todo/ <%= todo.id %>"
        class="close fa fa-check-square mr-2"
        style="color: rgb(4, 0, 255)"
      ></a>
      <% } else { %> <%= todo.text %>
      <a
        href="/admin/delete-todo/ <%= todo.id %>"
        class="close fa fa-trash"
        style="color: red"
      ></a>
      <a
        href="/admin/completed-todo/ <%= todo.id %>"
        class="close fa fa-square mr-2"
        style="color: rgb(4, 0, 255)"
      ></a>
      <% } %>
    </div>
  </li>

  <% } %>
</ul>

<%} else { %>
<div class="alert alert-warning w-50 mx-auto" role="alert">
  <h4 class="alert-heading">هیچ کاری امروز نداری</h4>
  <p>میتونی کارهای امروزت رو بالا بنویسی</p>
  <hr />
  <p class="mb-0">
    خیلی دوست داشتنی هستی <span class="fa fa-heart" style="color: red"></span>
  </p>
</div>
<% } %>
